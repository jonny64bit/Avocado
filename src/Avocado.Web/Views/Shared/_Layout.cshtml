<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avocado.Web</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light mt-1 ms-sm-2 me-sm-2 border border-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index","Home")" aria-label="Avocado.Web">
                    Avocado.Web
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-links" aria-controls="navbar-links" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar-links">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.TopMenu == "Home" ? "active text-decoration-underline" : "")" aria-current="page" href="@Url.Action("Index","Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.TopMenu == "Accounts" ? "active text-decoration-underline" : "")" aria-current="page" href="@Url.Action("Index","Accounts")">Accounts</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
<div class="container-fluid pt-2">
    @RenderBody()
</div>

    <footer class="border-top footer text-muted ms-sm-2 me-sm-2">
        &copy; 2021 - Avocado.Web
    </footer>
    <script type="text/javascript" src="@Url.Content("~/dist/js/chunk-vendors.js")" asp-append-version="true" asp-add-nonce></script>
    <script type="text/javascript" src="@Url.Content("~/dist/js/chunk-common.js")" asp-append-version="true" asp-add-nonce></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
